<%= form_for(users_path, method: :get) do %>
  Name <%= text_field_tag :data, params[:data] %>
  <%= hidden_field_tag :column, "name" %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<h1>All Users</h1>
<br>
<% @users.each do |user| %>
  <p>
    <%= link_to user.name, user_path(user.id) %>   <br>
  </p>
<% end %>


