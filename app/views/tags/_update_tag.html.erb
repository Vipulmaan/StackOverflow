<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@tag, url: user_question_tag_path(current_user.id, @question.id, @tag.id)) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.submit "add tag", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>