<%= render "layouts/navbar" %>
<h1> Ask question </h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@question, url: user_questions_path(@question.user_id)) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.label :body %>
      <%= f.text_field :body, class: 'form-control' %>
      <%= f.submit "post question", class: "btn btn-primary" %>
    <% end %>
  </div>
<br><br><br>
   <% if @question.errors.any? %>
      <% for message_error in @question.errors.full_messages %>
        <li> <%= message_error %></li>
      <% end %>
    </ul>
  <% end %>
</div>
